{% if type is defined %}
    {% set type = type ~ '-' %}
{% else %}
    {% set type = null %}
{% endif %}

<div class="col-12">
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.firstName, sylius_test_form_attribute(type ~ 'first-name')) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.lastName, sylius_test_form_attribute(type ~ 'last-name')) }}
        </div>
    </div>
</div>

<div class="col-12">
    {{ form_row(form.company, sylius_test_form_attribute(type ~ 'company')) }}
</div>

<div class="col-12">
    {{ form_row(form.street, sylius_test_form_attribute(type ~ 'street')) }}
</div>

<div class="col-12">
    {% include '@SyliusShop/Common/Form/_countryCode.html.twig' with {
        'form': form.countryCode,
        'custom_data_form_attribute': {'attr': {'data-select-address': form.vars.name}},
    } %}
</div>

<div class="col-12" data-province-container="{{ form.vars.name }}" data-url="{{ path('sylius_shop_ajax_render_province_form') }}" data-absolute-url="{{ url('sylius_shop_ajax_render_province_form') }}">
    {% if form.provinceCode is defined %}
        {{ form_row(form.provinceCode, sylius_test_form_attribute('province-code')) }}
    {% elseif form.provinceName is defined %}
        {{ form_row(form.provinceName, sylius_test_form_attribute('province-name')) }}
    {% endif %}
</div>

{% if form.provinceCode is defined %}
    {{ form_errors(form) }}
{% endif %}

<div class="col-12">
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.city, sylius_test_form_attribute(type ~ 'city')) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.postcode, sylius_test_form_attribute(type ~ 'postcode')) }}
        </div>
    </div>
</div>

<div class="col-12">
    {{ form_row(form.phoneNumber) }}
</div>
