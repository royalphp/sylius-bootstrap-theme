{% import '@SyliusShop/Common/Macro/buttons.html.twig' as buttons %}

<div class="col">
    <div class="card border-success" id="sylius-default-address" {{ sylius_test_html_attribute('default-address') }}>
        <div class="position-relative">
            <div class="position-absolute top-0 end-0 text-bg-success">
                <span class="badge bg-success">{{ 'sylius.ui.your_default_address'|trans }}</span>
            </div>
        </div>
        <div class="card-body" {{ sylius_test_html_attribute('address', "%s %s"|format(address.firstName, address.lastName)) }}>
            {% include '@SyliusShop/Common/_address.html.twig' with {'address': address} %}
        </div>
        <div class="card-footer">
            <div class="row g-3">
                <div class="col-auto" {{ sylius_test_html_attribute('edit-button') }}>
                    {{ buttons.edit(path('sylius_shop_account_address_book_update', {'id': address.id}), null, true, address.id) }}
                </div>
                <div class="col-auto">
                    {{ buttons.delete(path('sylius_shop_account_address_book_delete', {'id': address.id}), null, true, address.id) }}
                </div>
            </div>
        </div>
    </div>
</div>
