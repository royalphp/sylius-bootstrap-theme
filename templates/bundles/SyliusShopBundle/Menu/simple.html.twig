{% extends 'knp_menu.html.twig' %}

{% block root %}
    <div class="card">
        <div class="card-header">{{ item.label|trans }}</div>
        <ul class="list-group list-group-flush">{{ block('list') }}</ul>
    </div>
{% endblock %}

{% block list %}
    {% for item in item.children %}
        {{ block('item') }}
    {% endfor %}
{% endblock %}

{% block item %}
    <a class="list-group-item list-group-item-action" href="{{ item.uri }}">
        {{ block('icon') }}
        {{ item.label|trans }}
    </a>
{% endblock %}

{% block icon %}
    {% set icon = item.labelAttribute('icon') %}
    {% if icon %}<i class="bi bi-{{ icon }}"></i> {% endif %}
{% endblock %}
