<div class="list-group-item" {{ sylius_test_html_attribute('payment-item') }}>
    <div class="card border-0">
        <div class="card-body">
            <div {{ sylius_test_html_attribute('payment-method-checkbox') }}>
                {{ form_widget(form, sylius_test_form_attribute('payment-method-select')) }}
            </div>
            <p class="card-title">{{ form_label(form, null, {'label_attr': {'data-test-payment-method-label': ''}}) }}</p>
            {% if method.description is not null %}
                <p class="card-text">{{ method.description }}</p>
            {% endif %}
        </div>
    </div>
</div>
