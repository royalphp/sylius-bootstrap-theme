<div class="container">
    <div class="row align-items-center my-3">
        {% include '@SyliusShop/Layout/Header/_logo.html.twig' %}
        <div class="col">
            <div class="row justify-content-end align-items-center">
                <div class="col-auto">
                    {% if order.customer.id|default(null) is not null %}
                        <div class="item" id="purchaser-email" {{ sylius_test_html_attribute('purchaser-name-or-email') }}>{{ 'sylius.ui.checking_out_as'|trans }} {{ app.user is null ? order.customer.email : order.customer.fullName|default(order.customer.email) }}.</div>
                    {% else %}
                        <a href="{{ path('sylius_shop_login') }}" class="link-sylius link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">{{ 'sylius.ui.sign_in'|trans }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
