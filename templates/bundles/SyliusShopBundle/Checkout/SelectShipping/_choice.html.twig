<div class="list-group-item" {{ sylius_test_html_attribute('shipping-item') }}>
    <div class="card border-0">
        <div class="card-body">
            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <div {{ sylius_test_html_attribute('shipping-method-checkbox') }}>
                        {{ form_widget(form, sylius_test_form_attribute('shipping-method-select')) }}
                    </div>
                    <p class="card-title" {{ sylius_test_html_attribute('shipping-method-label') }}>{{ form_label(form) }}</p>
                    {{ sylius_template_event('sylius.shop.checkout.select_shipping.choice_item_content', {'method': method, 'fee': fee}) }}
                </div>
                <div class="col-auto">
                    {{ sylius_template_event('sylius.shop.checkout.select_shipping.choice_item_extra', {'method': method, 'fee': fee}) }}
                </div>
            </div>
        </div>
    </div>
</div>
